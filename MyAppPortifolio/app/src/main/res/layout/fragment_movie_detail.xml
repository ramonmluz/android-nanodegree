<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.nanodegree.udacity.myappportifolio.activity.MovieDetailActivityFragment"
    tools:showIn="@layout/activity_movie_detail">

        <TextView
            android:id="@+id/original_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="56sp"
            android:background="@color/teal"
            android:textColor="@color/whiteColor"
            android:paddingTop="32dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"/>

        <ImageView
            android:id="@+id/movie_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/original_title"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/indigoColor"
            android:layout_alignTop="@+id/movie_image"
            android:layout_toRightOf="@+id/movie_image"
            android:layout_marginLeft="32dp"/>

        <TextView
            android:id="@+id/vote_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/indigoColor"
            android:layout_below="@+id/release_date"
            android:layout_toRightOf="@+id/movie_image"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="32dp"/>

         <TextView
             android:id="@+id/overview"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/movie_image"
             android:layout_marginTop="32dp"
             android:layout_marginLeft="16dp"
             android:textAppearance="?android:textAppearanceSmall"/>


</RelativeLayout>
